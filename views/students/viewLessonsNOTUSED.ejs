<% include _header %>

<h2><%= course.title %>'s Lessons</h2>
<table cellspacing="0" cellpadding="0">
	<thead>
		<tr>
			<th>Lesson Number</th>
			<th>Lesson Title</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% course.lessons.forEach(function(lesson) { %>
			<tr>
				<td><%= lesson.lesson_number %></td>
				<td><%= lesson.lesson_title %></td>
				<td><a href="/courses/<%= course._id %>/lessons/<%= lesson._id %>">View the lesson</a></td>
			</tr>
		<% }); %>
	</tbody>
</table>

<% include _footer %>
