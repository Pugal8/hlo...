<%- include('../partials/header') %>

<div class="container-dashboard">
  <h1>Instructor's Dashboard</h1>
  <a class="btn btn-primary my-2" href="/<%= currentUser.type %>s/createCourse">Create New Course</a>
</div>

<div class="album py-5 bg-light">
  <div class="container">
    <h2>Your Courses > </h2>
    <div class="row">

      <% courses.forEach(function(course) { %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src="/images/teacher.jpeg" alt="Card image cap">
          <div class="card-body">
            <a href="/courses/<%= course._id %>/details"><h3><%= course.title %></h3></a>
            <p class="card-text"><%= course.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a class="btn btn-sm btn-outline-secondary" href="/courses/<%= course._id %>/details">View</a>
                <a class="btn btn-sm btn-outline-secondary" href="/instructors/modifyCourse/<%= course._id %>">Edit</a>
                <a class="btn btn-sm btn-outline-secondary" href="/instructors/<%= course._id %>/CreateLesson">Add Lesson</a>
              </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      </div>
      <% }); %>

    </div> <!-- close row -->
  </div> <!-- close container -->
</div> <!-- close album py5 -->

<%- include('../partials/footer') %>
