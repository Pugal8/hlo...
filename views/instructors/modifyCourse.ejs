<%- include('../partials/header') %>

<div class="padded-container">
	<h2 class="h3 mb-3 font-weight-normal">Modify Course</h2>

	<form method="post" action="/instructors/modifyCourse/<%= course._id %>">
		<label for="title">Title</label>
		<input type="text" name="title" class="form-control" value="<%= course.title %>">
		<br />
		<label for="description">Description</label>
		<textarea name="description" class="form-control"><%= course.description %></textarea>
		<br />
		<input type="submit" class="btn btn-lg btn-primary btn-block" value="Modify Course">
	</form>
</div>







